{
  "plugin": "org.smartide.plugin.kotlin",
  "run": "kotlinc Main.kt -d . && kotlin MainKt",
  "gui": false,
  "intelligence": {
    ".json": {
      "enabled": true,
      "run": "vscode-json-language-server --stdio"
    },
    ".kt": {
      "enabled": false,
      "run": "kotlin-language-server"
    },
    ".yml": {
      "enabled": true,
      "run": "yaml-language-server --stdio"
    },
    ".md": {
      "enabled": false,
      "run": "marksman server"
    },
    ".gradle": {
      "enabled": true,
      "run": "groovy-language-server"
    },
    ".toml": {
      "enabled": false,
      "run": "taplo lsp stdio"
    }
  }
}